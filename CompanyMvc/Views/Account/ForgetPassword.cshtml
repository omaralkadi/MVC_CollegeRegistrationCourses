@model ForgetPasswordVM
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


<section class="sign-in">
    <div class="container">
        <div asp-validation-summary="All"></div>
        <div class="signin-content">

            <div class="signin-form">
                <h2 class="form-title">Forget Password</h2>
                <form method="POST" asp-action="ForgetPassword" class="register-form" id="login-form">

                    <div class="form-group">
                        <label for="Email"></label>
                        <input asp-for="Email" id="Email" placeholder="Email" />
                        <span asp-validation-for="Email"></span>
                    </div>

                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="form-submit" value="Forget Password" />
                    </div>

                </form>
                <a href="Login" class="signup-image-link">Back</a>

            </div>
        </div>
    </div>
</section>

