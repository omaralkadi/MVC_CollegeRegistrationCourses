@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<section class="sign-in">
    <div class="container">
        <div asp-validation-summary="All"></div>
        <div class="signin-content">

            <div class="signin-form">
                <h2 class="form-title">Reset Password</h2>
                <form method="POST" asp-action="ResetPassword" class="register-form" id="login-form">


                    <div class="form-group">
                        <label for="Password"></label>
                        <input asp-for="Password" id="Password" placeholder="Password" />
                        <span asp-validation-for="Password"></span>
                    </div>

                    <div class="form-group">
                        <label for="Con"></label>
                        <input asp-for="ConfirmPassword" id="ConfirmPassword" placeholder="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>


                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="form-submit" value="Reset Password" />
                    </div>

                </form>

                <a href="ForgetPassword" class="signup-image-link">Back!</a>

            </div>
        </div>
    </div>
</section>

@section Validation {

    <partial name="_ValidationScriptsPartial"></partial>

}

