@model IEnumerable<EmployeeVM>;

@{
    ViewData["Title"] = "Employees";
}

<h1 class="text-center pb-4">Employees</h1>
<a asp-controller="Employee" asp-action="Create" class="btn btn-success mb-4">Create New Employee</a>
@if (TempData["Message"] is not null)
{
    <div class="alert alert-success">
        <h1>@TempData["Message"]</h1>
    </div>
}

<div class="mt-5 mb-5">

    <form class="row offset-1" asp-action="Index">
        <div class="col-10">
            <input type="text" placeholder="Employee's Name" class="form-control" name="SeachValue" />
        </div>

        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Search" />
        </div>

    </form>

</div>
@if (Model.Count() > 0)
{

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(x => x.Image)</th>
                    <th scope="col">@Html.DisplayNameFor(x => x.Name)</th>
                    <th scope="col">@Html.DisplayNameFor(x => x.Salary)</th>
                    <th scope="col">@Html.DisplayNameFor(x => x.departnment)</th>
                    <th scope="col">@Html.DisplayNameFor(x => x.Age)</th>
                    <th scope="col">@Html.DisplayNameFor(x => x.IsActive)</th>
                    <th scope="col">@Html.DisplayNameFor(x => x.Address)</th>
                    <th scope="col">@Html.DisplayNameFor(x => x.Email)</th>
                    <th scope="col">@Html.DisplayNameFor(x => x.Phone)</th>
                    <th scope="col">Details</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td><img src="~/Files/Images/@employee.ImageName" style="width:50px ;height:50px"/></td>
                        <td>@Html.DisplayFor(e => employee.Name)</td>
                        <td>@Html.DisplayFor(e => employee.Salary)</td>
                        <td>@Html.DisplayFor(e => employee.departnment.Name)</td>

                        <td>@Html.DisplayFor(e => employee.Age)</td>
                        <td>
                            @if (employee.IsActive)
                            {
                                <i class="fa-solid fa-circle" style="color:green"></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-circle" style="color:red"></i>

                            }

                        </td>
                        <td>@Html.DisplayFor(e => employee.Address)</td>
                        <td>@Html.DisplayFor(e => employee.Email)</td>
                        <td>@Html.DisplayFor(e => employee.Phone)</td>

                        <partial name="_ButtonsPartialView" model="@employee.Id"></partial>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">
        No Employees Found
    </div>
}
