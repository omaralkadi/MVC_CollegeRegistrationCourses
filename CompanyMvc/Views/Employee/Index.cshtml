@model IEnumerable<Employee>;

@{
    ViewData["Title"] = "Employees";
}

<h1 class="text-center pb-4">Employee</h1>
<a asp-controller="Employee" asp-action="Create" class="btn btn-success mb-4">Create New Employee</a>
@if (TempData["Message"] is not null)
{
    <div class="alert alert-success">
        <h1>@TempData["Message"]</h1>
    </div>
}
@if (Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(x => x.Name)</th>
                    <th scope="col">@Html.DisplayNameFor(x => x.Salary)</th>
                    <th scope="col">@Html.DisplayNameFor(x => x.Age)</th>
                    <th scope="col">@Html.DisplayNameFor(x => x.IsActive)</th>
                    <th scope="col">@Html.DisplayNameFor(x => x.Address)</th>
                    <th scope="col">@Html.DisplayNameFor(x => x.Email)</th>
                    <th scope="col">@Html.DisplayNameFor(x => x.Phone)</th>
                    <th scope="col">Details</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(e => employee.Name)</td>
                        <td>@Html.DisplayFor(e => employee.Salary)</td>
                        <td>@Html.DisplayFor(e => employee.Age)</td>
                        <td>
                            @if (employee.IsActive)
                            {
                                <i class="fa-solid fa-circle" style="color:green"></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-circle" style="color:red"></i>

                            }

                        </td>
                        <td>@Html.DisplayFor(e => employee.Address)</td>
                        <td>@Html.DisplayFor(e => employee.Email)</td>
                        <td>@Html.DisplayFor(e => employee.Phone)</td>

                        <partial name="_ButtonsPartialView" model="@employee.Id"></partial>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">
        No Employee Creation
    </div>
}
