@model EmployeeVM
@{
    ViewData["Title"] = "Create";
}
<h1 class="pb-4">Update Employee</h1>
<div class="form-control">
    <img src="~/Files/Images/@Model.ImageName" style="width:100px ;height:100px" />

</div>
<form asp-action="Update" enctype="multipart/form-data">
    <input hidden asp-for="ImageName"/>
    <partial name="partial//CreateUpdatePartialView"></partial>


    <input type="submit" class="btn btn-primary" value="Submit" />
    <a asp-action="Index" class="btn btn-dark">Back</a>
</form>

@section Validation {
    <partial name="_ValidationScriptsPartial"></partial>

}