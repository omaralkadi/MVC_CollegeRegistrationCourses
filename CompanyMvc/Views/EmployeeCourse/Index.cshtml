@model IEnumerable<EmployeeCourse>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center pb-4">Instructors Courses</h1>
<a asp-action="Create" class="btn btn-success mb-4">InRoll inStructor Into Course</a>

@if (TempData["Message"] is not null)
{
    <div class="alert alert-success">
        <h1>@TempData["Message"]</h1>
    </div>
}

@if (Model?.Count() > 0)
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(d => d.Course)</th>
                    <th scope="col">@Html.DisplayNameFor(d => d.Employee)</th>
                    <th scope="col">Details</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Course in Model)
                {
                    <tr>
                        <td>@Course.Course.Name</td>
                        <td>@Course.Employee.Name</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@Course.EmployeeId" asp-route-CourseId="@Course.CourseId" class="btn btn-primary">
                                <i class="fas fa-eye"></i> Details
                            </a>
                        </td>

                        <td>
                            <a asp-action="Update" asp-route-id="@Course.EmployeeId" asp-route-CourseId="@Course.CourseId" class="btn btn-warning">
                                <i class="fa-solid fa-pencil"></i> Update
                            </a>
                        </td>

                        <td>
                            <a asp-action="Delete" asp-route-id="@Course.EmployeeId" asp-route-CourseId="@Course.CourseId" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">
        No Instructors InRolled in Courses
    </div>
}

