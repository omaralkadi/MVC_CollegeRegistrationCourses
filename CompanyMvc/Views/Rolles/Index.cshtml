@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Roles";
}
<a asp-action="Create" class="btn btn-primary mt-3">Create New Role </a>

<div class="mt-5">

    <form class="row offset-1" asp-action="Index">
        <div class="col-10">
            <input type="text" placeholder="Employee's Name" class="form-control" name="name" />
        </div>

        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Search" />
        </div>

    </form>

</div>

@if (Model.Count() > 0)
{
    <h1 class="mt-5">All Roles</h1>

   

    <table class="table table-striped mt-3">

        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d => d.Id) </td>
                <td>@Html.DisplayNameFor(d => d.Name) </td>

                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>

        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id </td>
                    <td>@Role.Name </td>
                    <partial name="_ButtonsPartialView" model="@Role.Id.ToString()"></partial>

                </tr>

            }

        </tbody>


    </table>

}
else
{
    <div class="mt-3 alert alert-warning">
        <h1 class="">No Roles Found !!</h1>

    </div>

}